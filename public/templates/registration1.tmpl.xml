<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <div class="registration" style="display: inline;">
        <form class="registration__form">
            <h1 class="registration__header">Регистрация</h1>
            <span class="js-email-error registration__form__error" name="emailError" hidden="hidden">Пожалуйста, введите валидный e-mail!</span>
            <input placeholder="E-mail" class="js-email registration__form__input" name="email" type="text">
            <span class="js-password-error registration__form__error" name="passwordError" hidden="hidden">Пожалуйста, введите пароль!</span>
            <input placeholder="Password" class="js-password registration__form__input" name="password" type="password">
            <button class="js_submit registration__form__button" name="button">Продолжить</button>
        </form>
    </div>
</fest:template>
